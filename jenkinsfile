pipeline {
    agent any

    environment {
        AWS_REGION = "ap-south-1"
        TF_VAR_app_version = "build-${BUILD_ID}"
        AWS_CRED = "Auto"                 // Jenkins stored secret ID
        TERRAFORM_DIR = "."               // Terraform root folder
    }

    triggers {
        githubPush()                      // Trigger on GitHub commit/push
    }

    stages {

        stage('üì• Clone Repo') {
            steps {
                echo "Pulling source code from GitHub..."
                checkout scm
            }
        }

        stage('üîë Configure AWS Credentials') {
            steps {
                withCredentials([string(credentialsId: "${AWS_CRED}", variable: 'AWS_CREDS')]) {
                    withEnv([
                        "AWS_ACCESS_KEY_ID=${AWS_CREDS.split(':')[0]}",
                        "AWS_SECRET_ACCESS_KEY=${AWS_CREDS.split(':')[1]}",
                        "AWS_DEFAULT_REGION=${AWS_REGION}"
                    ]) {
                        sh '''
                            echo "AWS authentication configured"
                            env | grep AWS
                        '''
                    }
                }
            }
        }

        stage('‚öô Terraform Init') {
            steps {
                sh """
                    cd ${TERRAFORM_DIR}
                    terraform init -reconfigure
                """
            }
        }

        stage('üîç Terraform Plan') {
            steps {
                sh """
                    cd ${TERRAFORM_DIR}
                    terraform plan -input=false -out=tfplan -var="app_version=${TF_VAR_app_version}"
                """
            }
        }

        stage('üöÄ Terraform Apply') {
            steps {
                sh """
                    cd ${TERRAFORM_DIR}
                    terraform apply -auto-approve tfplan
                """
            }
        }

        stage('üåê Show ALB URL') {
            steps {
                sh """
                    cd ${TERRAFORM_DIR}
                    terraform output alb_dns_name
                """
            }
        }
    }

    post {
        success {
            echo "üöÄ Deployment Successful ‚Äî Version: ${TF_VAR_app_version}"
        }
        failure {
            echo "‚ùå Deployment Failed ‚Äî Check Jenkins logs"
        }
    }
}
